<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %> - PROPOSITION T</title>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;600&family=Noto+Sans+KR:wght@300;500;700&display=swap" rel="stylesheet">
    <style>
        /* 기존 목록 페이지의 배경, 폰트 스타일 그대로 유지 */
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            background-color: #000;
            color: #00ff41;
            font-family: 'Fira Code', 'Noto Sans KR', monospace;
            overflow-x: hidden;
            line-height: 1.6;
        }

        #matrix-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -1;
            opacity: 0.6;
        }

        .container {
            width: 90%;
            max-width: 1000px; /* 읽기 편하게 목록보단 폭을 조금 줄였습니다 */
            margin: 60px auto;
            background: rgba(0, 10, 0, 0.85); /* 본문 가독성을 위해 배경을 조금 더 어둡게 */
            border: 1px solid rgba(0, 255, 65, 0.4);
            box-shadow: 0 0 20px rgba(0, 255, 65, 0.15);
            border-radius: 8px;
            padding: 50px;
            backdrop-filter: blur(5px);
        }

        .header-info {
            border-bottom: 1px dashed rgba(0, 255, 65, 0.5);
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 15px;
            text-shadow: 0 0 8px #00ff41;
            word-break: keep-all;
        }

        .meta-data {
            font-size: 0.9rem;
            color: rgba(0, 255, 65, 0.8);
            display: flex;
            gap: 20px;
        }

        .content {
            font-size: 1.1rem;
            color: #e0ffe6;
            white-space: pre-wrap; /* 줄바꿈 유지 */
            min-height: 300px;
        }

        /* 뒤로가기 버튼 스타일 */
        .btn-back {
            display: inline-block;
            margin-top: 40px;
            padding: 10px 20px;
            color: #000;
            background-color: #00ff41;
            text-decoration: none;
            font-weight: 600;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 255, 65, 0.4);
            transition: 0.3s;
        }

        .btn-back:hover {
            background-color: #00cc33;
            box-shadow: 0 0 15px rgba(0, 255, 65, 0.8);
        }
    </style>
</head>
<body>
    <canvas id="matrix-canvas"></canvas>

    <div class="container">
        <div class="header-info">
            <h1><%= post.title %></h1>
            <div class="meta-data">
                <span>DATE: <%= post.date %></span>
                <span>SENDER: <%= post.sender %></span>
                <span>RECEIVER: <%= post.receiver %></span>
            </div>
        </div>

        <div class="content">
            <%- post.content %> 
            </div>

        <a href="/" class="btn-back">[ RETURN TO MAIN ]</a>
    </div>

    <script>
        // 매트릭스 배경 효과 스크립트 (목록 페이지와 동일)
        const canvas = document.getElementById('matrix-canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%^&*'.split('');
        const fontSize = 14;
        const columns = canvas.width / fontSize;
        const drops = [];
        for (let x = 0; x < columns; x++) drops[x] = 1;

        function drawMatrix() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#0F0';
            ctx.font = fontSize + 'px monospace';
            for (let i = 0; i < drops.length; i++) {
                const text = chars[Math.floor(Math.random() * chars.length)];
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) drops[i] = 0;
                drops[i]++;
            }
        }
        setInterval(drawMatrix, 33);
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>
</body>
</html>